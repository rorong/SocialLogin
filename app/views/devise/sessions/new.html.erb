<div class="container">
    <div class="row">
      <h2 style="text-align:center">Login with Social Media or Manually</h2>
      <div class="vl">
        <span class="vl-innertext">or</span>
      </div>

      <div class="col">
        <a href="/googlelogin" class="google btn"><i class="fa fa-google fa-fw">
          </i> Login with Google
        </a>
        <a href="/facebooklogin" class="fb btn">
          <i class="fa fa-facebook fa-fw"></i> Login with Facebook
        </a>
        <a href="/linkedinlogin" class="twitter btn">
          <i class="fa fa-twitter fa-fw"></i> Login with LinkedIn
        </a>
        <a href="/instagramlogin" class="instagram btn">
          <i class="fa fa-instagram fa-fw"></i> Login with Instagram
        </a>
      </div>

      <div class="col">
        <div class="hide-md-lg">
          <p>Or sign in manually:</p>
        </div>
        <%= form_for(resource, as: resource_name, url: user_session_path,method: :post) do |f| %>
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
          <%= f.label :password %><br />
          <%= f.password_field :password %>
          <%= f.submit "Log in" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>

    </div>
</div>
